{
    "manifest_version": 3,
    "name": "chess.com Glassmorphic Theme",
    "version": "1.0",
    "description": "Give chess.com a glassmorphic look",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "https://*.chess.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.chess.com/*"
            ],
            "js": [
                "contentScript.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    }
}